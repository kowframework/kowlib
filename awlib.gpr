project Awlib is

   version := "0.1.0";


   for Source_Dirs use ("src", "src-os");
   for Object_Dir use "obj";

   -- LIBRARY
   for Library_Dir use "lib";
   for Library_Name use "awlib";
   for Library_Kind use "dynamic";
   for Library_Version use "libawlib.so." & Version;


   package Compiler is
      for Default_Switches ("ada") use ("-O2", "-gnat05");
   end Compiler;

end Awlib;


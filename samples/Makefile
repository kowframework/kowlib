projectFile="awlib-samples.gpr"



all: samples
	@echo "======================================================="
	@echo "==                                                   =="
	@echo "==                    All done!                      =="
	@echo "==                                                   =="
	@echo "==    Now run the examples in the ./bin directory!   =="
	@echo "==                                                   =="
	@echo "======================================================="


samples:
	gnatmake -P ${projectFile}



clean:
	gnatclean -P ${projectFile}
	@echo "All clean"

docs:
	@-./gendoc.sh
	@echo "The documentation is generated by a bash script. Then it might fail in other platforms"

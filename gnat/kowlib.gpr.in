project KOWlib is

	-----------------------
	-- Type declarations --
	-----------------------

	type True_False is ( "true", "false" );
	type Supported_OS is ("Windows_NT", "GNU/Linux", "Darwin" );


	--------------------
	-- Main Variables --
	--------------------

	version	:= $version;
	OS	: Supported_OS	:= external( "OS", "GNU/Linux" );
	Debug	: True_False	:= external( "DEBUG", "false" );





	----------------
	-- Parameters --
	----------------

	for Source_Dirs use ( "../../src/kowlib/" );
	for Library_Name use $project;
	for Library_kind use external( "LIBRARY_KIND", "static" );


	case Debug is
		when "true" =>
			for Library_Dir use "../kowlib-debug/" & Project'Library_Kind;
			for Object_Dir use $object_path & "/debug/" & Project'Library_Kind;
		when "false" =>
			for Library_Dir use "../kowlib/" & Project'Library_Kind;
			for Object_Dir use $object_path & "/" & Project'Library_Kind;

	end case;



	for Library_Version use "lib" & Project'Library_Name & ".so." & Version;
	for Externally_Built use External( "KOWLIB_EXTERNALLY_BUILT", "true" );



	----------------------
	-- Compiler Package --
	----------------------
	package Compiler is
		case Debug is
			when "true" =>
				for Default_Switches ("ada") use ("-O2", "-gnat05", "-g");
			when "false" =>
				for Default_Switches ("ada") use ("-O2", "-gnat05" );
		end case;
	end Compiler;


	--------------------
	-- Linker Package --
	--------------------

	package Linker is
		case OS is
			when "Windows_NT" =>
			when others =>
				for Default_Switches ("ada") use ("-ldl");
		end case;
	end Linker;
end KOWlib;


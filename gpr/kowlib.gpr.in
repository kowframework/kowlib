with "kow_framework_setup.gpr";


project KOWlib is

	version	:= $version;
	


	target: KOW_Framework_Setup.Supported_OS := Kow_Framework_Setup.Target;


	for Source_Dirs use ( $include_prefix );

	-- LIBRARY
	for Library_Dir use $lib_prefix;
	for Library_Name use "kowlib";
	for Library_Kind use KOW_Framework_Setup'Library_Kind;
	for Library_Version use "libkowlib.so." & Version;
	for Externally_Built use "true";


	package Compiler is
		for Default_Switches ("ada") use ("-O2", "-gnat05", "-fPIC");
	end Compiler;

	package Linker is
		case target is
			when "Windows_NT" =>
			when others =>
				for Default_Switches ("ada") use ("-ldl");
		end case;
	end Linker;
end KOWlib;

